@model CarritoC.Models.Carrito

@{
    ViewData["Title"] = "Crear Carrito";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-cart4 me-2"></i>
                    <h4 class="mb-0">Nuevo Carrito</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" asp-for="Activo" />
                            <label class="form-check-label" asp-for="Activo">
                                <i class="bi bi-toggle-on"></i> Activo
                            </label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-person"></i> Cliente</label>
                            <input type="text" class="form-control" value="@ViewData["ClienteNombre"]" disabled />
                            <input type="hidden" asp-for="ClienteId" value="@ViewData["ClienteId"]" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Volver al listado
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Confirmar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}