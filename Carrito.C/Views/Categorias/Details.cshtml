@model CarritoC.Models.Categoria

@{
    ViewData["Title"] = "Detalle de Categoría";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-4">📂 Detalle de Categoría</h2>

    <div class="card shadow border-0">
        <div class="card-body">
            <dl class="row fs-5">
                <dt class="col-sm-4 text-muted">📛 Nombre</dt>
                <dd class="col-sm-8">@Model.Nombre</dd>

                <dt class="col-sm-4 text-muted">📝 Descripción</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
       
        <a asp-action="Index" class="btn btn-outline-secondary">
            🔙 Volver a la Lista
        </a>
    </div>
</div>